{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "pretty": true,
    "strict": false,
    "outDir": ".next",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "./pages/**/*",
    "./src/**/*",
    "./client/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
