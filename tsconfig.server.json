{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": ".next/production-server",
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
